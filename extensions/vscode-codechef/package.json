{
  "name": "vscode-codechef",
  "displayName": "code/chef - AI DevOps Team",
  "description": "Your personal AI DevOps Team, orchestrated by the Head Chef.",
  "version": "0.5.2",
  "publisher": "appsmithery.co",
  "license": "MIT",
  "icon": "icon.png",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Appsmithery/code-chef"
  },
  "bugs": {
    "url": "https://github.com/Appsmithery/code-chef/issues"
  },
  "homepage": "https://codechef.appsmithery.co",
  "badges": [
    {
      "url": "https://img.shields.io/badge/orchestrator-LangGraph-blue",
      "description": "LangGraph Orchestrator (6 Agent Nodes)"
    },
    {
      "url": "https://img.shields.io/badge/MCP_tools-150+-green",
      "description": "150+ MCP Tools"
    },
    {
      "url": "https://img.shields.io/badge/LangChain-enabled-orange",
      "description": "LangChain Function Calling"
    }
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "development-tools",
    "Productivity",
    "Other"
  ],
  "keywords": [
    "devops",
    "dev-tools",
    "dev-team",
    "copilot",
    "ai",
    "codechef",
    "orchestrator",
    "mcp",
    "langsmith",
    "langchain",
    "langgraph",
    "workflow-engine",
    "state-management",
    "multi-agent",
    "automation",
    "code-generation",
    "code-review",
    "infrastructure",
    "cicd",
    "documentation",
    "function-calling",
    "progressive-disclosure"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codechef.orchestrate",
    "onCommand:codechef.checkStatus",
    "onCommand:codechef.configure",
    "onCommand:codechef.showApprovals",
    "onCommand:codechef.clearCache"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "codechef",
        "name": "codechef",
        "description": "LangGraph orchestrator with LangChain function calling. Access 150+ tools routed through internal agent nodes (feature-dev, code-review, infrastructure, cicd, documentation). 80-90% token cost reduction via progressive disclosure.",
        "isSticky": true,
        "commands": [
          {
            "name": "orchestrate",
            "description": "Submit a development task to the orchestrator"
          },
          {
            "name": "status",
            "description": "Check the status of a submitted task"
          },
          {
            "name": "approve",
            "description": "Approve a pending task"
          },
          {
            "name": "tools",
            "description": "List available MCP tools"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "codechef.orchestrate",
        "title": "Submit Task to Orchestrator",
        "category": "code/chef"
      },
      {
        "command": "codechef.checkStatus",
        "title": "Check Task Status",
        "category": "code/chef"
      },
      {
        "command": "codechef.configure",
        "title": "Configure Orchestrator URL",
        "category": "code/chef"
      },
      {
        "command": "codechef.showApprovals",
        "title": "Show Pending Approvals",
        "category": "code/chef"
      },
      {
        "command": "codechef.clearCache",
        "title": "Clear Tool Cache",
        "category": "code/chef"
      },
      {
        "command": "codechef.copyPermalink",
        "title": "Copy GitHub Permalink",
        "category": "code/chef"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codechef.copyPermalink",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "code/chef",
      "properties": {
        "codechef.orchestratorUrl": {
          "type": "string",
          "default": "https://codechef.appsmithery.co/api",
          "description": "code/chef orchestrator endpoint",
          "format": "uri"
        },
        "codechef.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authenticating with the code/chef orchestrator. Get this from your administrator.",
          "markdownDescription": "API key for authenticating with the code/chef orchestrator. Required for production use. Get this from your administrator or generate one with `python -c \"import secrets; print(secrets.token_urlsafe(32))\"`"
        },
        "codechef.linearHubIssue": {
          "type": "string",
          "default": "DEV-68",
          "description": "Linear issue ID for approval notifications"
        },
        "codechef.linearWorkspaceSlug": {
          "type": "string",
          "default": "dev-ops",
          "description": "Linear workspace slug used when opening approval links (e.g., 'dev-ops' for /dev-ops/ URLs)"
        },
        "codechef.autoApproveThreshold": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical",
            "never"
          ],
          "default": "low",
          "description": "Auto-approve tasks at or below this risk level"
        },
        "codechef.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show toast notifications for approval requests"
        },
        "codechef.langsmithUrl": {
          "type": "string",
          "default": "https://smith.langchain.com/o/5029c640-3f73-480c-82f3-58e402ed4207/projects/p/f967bb5e-2e61-434f-8ee1-0df8c22bc046",
          "description": "LangSmith project URL for viewing traces",
          "format": "uri"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish:vsce": "vsce publish",
    "publish:npm": "npm publish --access public"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@types/eventsource": "^1.1.15",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
